<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.20"/>
  <object class="GtkWindow" id="main_window">
    <property name="default_width">400</property>
    <property name="default_height">400</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkEntry" id="title_entry">
            <property name="placeholder_text">Enter Book Title</property>
          </object>
        </child>
        <child>
          <object class="GtkEntry" id="author_entry">
            <property name="placeholder_text">Enter Author Name</property>
          </object>
        </child>
        <child>
          <object class="GtkEntry" id="isbn_entry">
            <property name="placeholder_text">Enter ISBN</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="add_button">
            <property name="label">Add Book</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="list_button">
            <property name="label">List Books</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="remove_button">
            <property name="label">Remove Book</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="update_button">
            <property name="label">Save Book</property>
          </object>
        </child>
        <child>
          <object class="GtkScrolledWindow">
            <property name="expand">true</property>
            <child>
              <object class="GtkTreeView" id="book_tree_view">
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
